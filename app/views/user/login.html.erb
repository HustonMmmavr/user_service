<% provide(:title, 'Sign up') %>
<h1 class="col-md-12 col-xs-12">Sign up</h1>

<div class="row">
  <% if @err != nil %>
    <% if @err.size != 0 %>
    <div class="col-md-4 col-md-offset-4">
      <% for e in @err %>
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong><%= e %></strong>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>

  <div class="col-md-4 col-md-offset-4" data toggle="validator">
    <%= form_for @user, {:url => :login_post, :html => {:class => "form-group", 'data-toggle' => "validator"}} do |f| %>

      <div class="form-group  field_input top_margin col-md-12">
        <%= f.label :name, "Name", class:  "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.text_field :name,  class: "col-md-12 form-control", :required => true  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <div class="form-group field_input col-md-12">
        <%= f.label :password, "Password", class: "col-md-3 control-label padding_label" %>
        <div class="col-md-9">
          <%= f.password_field :password, class: "col-md-12 form-control", :required => true, 'data-minlength'=> 6  %>
        </div>
        <div class="help-block with-errors"> </div>
      </div>

      <%= f.submit "Login", class: "btn btn primary col-md-12" %>
   </div>
    <% end %>
  </div>
</div>
